<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lesson.Lesson_information"
    android:padding="10dp">

    <TextView
        android:id="@+id/lesson_infor_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="课程名称"
        android:textSize="22sp"
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/lesson_infor_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="课程安排：时间-地点"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/lesson_infor_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="任课老师：xxx老师"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/lesson_infor_kaikedanwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="开课单位：院系"
        android:textSize="18sp"

        />
    <TextView
        android:id="@+id/lesson_infor_introduction"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="start"
        android:text="课程简介:本课程xxxxxxx"
        android:textSize="18sp"

        />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/lesson_infor_checknotice"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="查看课程通知"
        android:layout_marginTop="25dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"

     />



</LinearLayout>